/* pages/result/result.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.result-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
  color: #333;
}

.info-section, .score-section {
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #f8f8f8;
}

.score-section {
  background-color: #f0f9f0;
}

.label {
  color: #666;
  font-size: 28rpx;
}

.value {
  color: #333;
  font-weight: 500;
}

.score-value {
  color: #07C160;
  font-size: 32rpx;
  font-weight: bold;
}

.section {
  margin: 30rpx 0;
  padding: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 1px solid #eee;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-bar {
  width: 6rpx;
  height: 32rpx;
  background-color: #07C160;
  margin-right: 16rpx;
}

.section-title text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.comment-list, .list {
  padding: 10rpx 0;
}

.comment-item, .list-item {
  padding: 16rpx 20rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 1.6;
}

.list-item {
  position: relative;
  padding-left: 50rpx;
}

.loading {
  text-align: center;
  color: #666;
  font-style: italic;
  padding: 40rpx 0;
}

.error {
  text-align: center;
  color: #ff4444;
  padding: 40rpx 0;
}

.back-btn {
  width: 80% !important;
  margin: 40rpx auto;
  background-color: #07C160;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 8rpx rgba(7,193,96,0.2);
}

.back-btn:active {
  transform: scale(0.98);
  background-color: #06b057;
}